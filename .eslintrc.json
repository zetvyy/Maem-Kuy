{
  "env": {
    "browser": true,
    "es2021": true,
    "jasmine": true,
    "codeceptjs/codeceptjs": true
  },
  "extends": ["standard", "plugin:codeceptjs/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "quotes": "off",
    "semi": "off",
    "space-before-function-paren": "off",
    "comma-dangle": "off"
  },
  "plugins": ["jasmine", "codeceptjs"]
}
